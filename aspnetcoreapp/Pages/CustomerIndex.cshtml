@page 
@model CustomerIndex 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form method="POST">
    <a class="btn btn-primary" asp-page='./CustomerAdd'>Add</a>
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>操作</th>
        </tr>
            
        @foreach (var item in Model.Customers) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a class="btn btn-primary" asp-page="./CustomerEdit" asp-route-id="@item.Id">edit</a>
                <button type="submit" class="btn" asp-page-handler="delete" asp-route-id="@item.Id">
                    delete</button>
            </td>
        </tr>
        }
    </table>
</form>